                                                            </TextBlock>
                                                            <!-- 'Value' pro 'In' / 'Out' (string) -->
                                                            <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                <Run Text="(" /><Run Text="{Binding DataType}" /><Run Text=") " /><Run Text="{Binding ValueStr, Mode=OneWay}" />
                                                            </TextBlock>
                                                            <!-- 'Value' pro 'Out' -->
                                                            <CheckBox Grid.Column="3" Style="{StaticResource StyleCheckBox2X}" IsChecked="{Binding Value}"
                                                                Visibility="{Binding IsOut, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                            <!-- zmena a pocet napisu -->
                                                            <Label Grid.Column="4" Content="{Binding ChangedStr}" HorizontalAlignment="Center" />
                                                            <Label Grid.Column="5" Content="{Binding Count}" HorizontalAlignment="Center" />
                                                            <!-- udalost se predava / zpracovava pomoci 'ButtonBase.Click="..."' v 'ListView' -->
                                                            <Button Grid.Column="6" Style="{StaticResource ButtonDevElmDatReadBase}"/>
                                                            <Button Grid.Column="6" Style="{StaticResource ButtonDataWrite}"/>
                                                        </Grid>
                                                    </Border>
