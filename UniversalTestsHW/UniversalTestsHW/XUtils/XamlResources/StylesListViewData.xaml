<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ProjData="clr-namespace:UniTestsHW.Data"
                    xmlns:XUtilsConvertersUni01="clr-namespace:XUtils.ConvertersUni01">
    <ResourceDictionary.MergedDictionaries>
        <!-- ResourceDictionary Source="/DomSpol3;component/XUtils/XamlResources/StylesCommon.xaml" / -->
        <ResourceDictionary Source="/UniversalTestsHW;component/XUtils/XamlResources/StylesCommon.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <!-- Convertor(s) -->
    <XUtilsConvertersUni01:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    <XUtilsConvertersUni01:IntToColorConverter x:Key="IntToColorConverter" />

    <!-- Style(s) -->

    <Style x:Key="LabelSeparator" TargetType="Label">
        <Setter Property="Background" Value="White" />
        <Setter Property="Padding" Value="10,0,10,3" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- zakladni styl pro 'Border' -->
    <Style x:Key="BorderBase" TargetType="Border">
        <Setter Property="Padding" Value="2,2,30,2" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="CornerRadius" Value="3" />
    </Style>
    <Style x:Key="BorderSensor" TargetType="Border" BasedOn="{StaticResource BorderBase}">
        <Setter Property="Background" Value="{Binding StatusInt, Converter={StaticResource IntToColorConverter}, ConverterParameter=LightGray|LightGreen|LightCoral}" />
    </Style>

    <!-- 'ListView' -->
    <Style x:Key="ListViewBase" TargetType="ListView">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="False" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!-- tlacitka 'Read' / 'Write' u 'Device(s)' / 'Element(s)' / 'Data(s)' -->
    <Style x:Key="ButtonDevElmDatBase" TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Width" Value="40" />
        <Setter Property="Tag" Value="{Binding}" />
    </Style>
    <Style x:Key="ButtonDevElmDatReadBase" TargetType="Button" BasedOn="{StaticResource ButtonDevElmDatBase}">
        <Setter Property="Content" Value="R" />
        <Setter Property="Visibility" Value="{Binding IsIn, Converter={StaticResource BoolToVisibilityConverter}}" />
    </Style>
    <Style x:Key="ButtonDevElmDatWriteBase" TargetType="Button" BasedOn="{StaticResource ButtonDevElmDatBase}">
        <Setter Property="Content" Value="W" />
        <Setter Property="Visibility" Value="{Binding IsOut, Converter={StaticResource BoolToVisibilityConverter}}" />
    </Style>
    <Style x:Key="ButtonDevElmWrite" TargetType="Button" BasedOn="{StaticResource ButtonDevElmDatWriteBase}">
        <Setter Property="IsEnabled" Value="{Binding ChangedOut}" />
    </Style>
    <Style x:Key="ButtonDataWrite" TargetType="Button" BasedOn="{StaticResource ButtonDevElmDatWriteBase}">
        <Setter Property="IsEnabled" Value="{Binding Changed}" />
    </Style>

    <!-- 'ItemSeparator' - oddelovac zakladnich Item(s) -->
    <DataTemplate DataType="{x:Type ProjData:ItmSeparator}">
        <!-- vodorovna cara -->
        <Grid Width="{Binding ActualWidth, ElementName=lvDevices}" Background="white" Focusable="False" >
            <Rectangle Fill="Black" HorizontalAlignment="Stretch" Height="3" Margin="0,0,32,0" VerticalAlignment="Center" />
            <Label Content="{Binding Name}" Style="{StaticResource LabelSeparator}"/>
        </Grid>
    </DataTemplate>
    <!-- 'Device' obsahujici 'Element(s)' -->
