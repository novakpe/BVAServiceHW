                                            <RowDefinition Height="40" />
                                            <!-- seznam 'Data(s)' -->
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="50*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- typ 'Element' -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Margin="30,0,0,0" VerticalAlignment="Center">
                                            <Run Text="[Element]"/>
                                        </TextBlock>
                                        <!-- zakladni informace -->
                                        <TextBlock Grid.Row="0" Grid.Column="1" Margin="30,0,0,0" VerticalAlignment="Center">
                                            <Run Text="{Binding Ident}"/><Run Text=" / "/><Run Text="{Binding ElementConfig.Name}"/><Run Text=" ("/><Run Text="{Binding ElementConfig.Desc}"/><Run Text=")"/>
                                        </TextBlock>
                                        <!-- zmeny -->
                                        <Label Grid.Row="0" Grid.Column="2" Content="{Binding ChangedStr}" VerticalAlignment="Center" />
                                        <!-- pocty zmen -->
                                        <TextBlock Grid.Row="0" Grid.Column="3" VerticalAlignment="Center">
                                            <Run Text="{Binding CountIn}"/><Run Text="/"/><Run Text="{Binding CountOut}"/>
                                        </TextBlock>
                                        <!-- 'Read' / 'Write' -->
                                        <Button Grid.Row="0" Grid.Column="4" Style="{StaticResource ButtonDevElmDatReadBase}" />
                                        <Button Grid.Row="0" Grid.Column="4" Style="{StaticResource ButtonDevElmWrite}" />
