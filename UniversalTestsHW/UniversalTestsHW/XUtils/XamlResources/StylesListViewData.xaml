                <Grid.RowDefinitions>
                    <!-- radek s udaji -->
                    <RowDefinition Height="Auto" />
                    <!-- radek se seznamem 'Element(s)' -->
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <!-- typ 'Device' -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="30,0,0,0" VerticalAlignment="Top">
                        <Run Text="[Device("/><Run Text="{Binding CmnType}"/><Run Text=")]"/>
                    </TextBlock>
                    <!-- popis -->
                    <TextBlock Grid.Row="0" Grid.Column="1" Margin="30,0,0,0" VerticalAlignment="Top">
                        <Run Text="{Binding Ident}"/><Run Text=" / "/><Run Text="{Binding DeviceConfig.Name}"/><Run Text=" ("/><Run Text="{Binding DeviceConfig.Desc}"/><Run Text=")"/>
                    </TextBlock>
                    <!-- zmeny -->
                    <TextBlock Grid.Row="0" Grid.Column="2" VerticalAlignment="Top">
                        <Run Text="{Binding ChangedStr, Mode=OneWay}"/>
                    </TextBlock>
                    <!-- pocty zmen -->
                    <TextBlock Grid.Row="0" Grid.Column="3" VerticalAlignment="Top">
                        <Run Text="{Binding CountIn}"/><Run Text="/"/><Run Text="{Binding CountOut}"/>
                    </TextBlock>
                    <!-- 'Read' / 'Write' -->
                    <Button Grid.Row="0" Grid.Column="4" Style="{StaticResource ButtonDevElmDatReadBase}" />
                    <Button Grid.Row="0" Grid.Column="4" Style="{StaticResource ButtonDevElmWrite}" />
                </Grid>
                <!-- rozbalovaci seznam 'Element(s)' -->
                <Expander Grid.Row="0" Margin="0,15,0,0" >
